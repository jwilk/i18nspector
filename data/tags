[invalid-date]
severity = normal
certainty = certain
description =
 The date is invalid or in an invalid format. The format should be
 ``YYYY-MM-DD hh:mm+ZZzz``, e.g. ``2011-11-05 10:14+0100``.
references =
 http://www.gnu.org/software/gettext/manual/html_node/Header-Entry.html

