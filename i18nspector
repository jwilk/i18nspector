'''
checking tool for gettext POT, PO and MO files
'''

import argparse
import os
import sys

basedir = ''
if not basedir:
    basedir = os.path.dirname(
        os.path.realpath(__file__)
    )
os.stat(basedir)
sys.path[:0] = [basedir]

def require_python(*version):
    if sys.version_info < version:
        prog = argparse.ArgumentParser().prog
        print('{prog}: error: Python >= {ver} is required'.format(
            prog=prog,
            ver='.'.join(map(str, version))
        ))
        sys.exit(1)

require_python(3, 2)

from lib import cli

cli.__doc__ = __doc__.strip()
cli.main(basedir)

